<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app_color">

    <!-- Empty State (declared first for lower z-order) -->
    <LinearLayout
        android:id="@+id/ll_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp"
        tools:visibility="visible">

        <!-- Empty Icon -->
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardBackgroundColor="@color/black_370"
            app:cardCornerRadius="60dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_empty_nutrition_96"
                android:alpha="0.6"
                android:contentDescription="@string/no_menus_found"/>

        </androidx.cardview.widget.CardView>

        <!-- Empty Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_menus_found"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

    </LinearLayout>

    <!-- Search and Filter Section -->
    <LinearLayout
        android:id="@+id/ll_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@color/background_app_color"
        app:layout_constraintTop_toTopOf="parent">

        <SearchView
            android:id="@+id/sv_search"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/filled_black_text_field"
            android:searchHintIcon="@color/white"
            android:queryHint="@string/search_menus"
            android:iconifiedByDefault="false"
            android:layout_marginEnd="8dp"/>

    </LinearLayout>

    <!-- Fitness Goal Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/hsv_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/ll_search_bar">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cg_fitness_goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textColor="@color/white"
                android:checked="true"
                app:chipBackgroundColor="@color/black_370"
                app:chipStrokeColor="@color/yellow"
                app:chipStrokeWidth="1dp"
                app:checkedIconTint="@color/yellow"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_lose_weight"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fitness_goal_lose_weight"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/black_370"
                app:chipStrokeColor="@color/yellow"
                app:chipStrokeWidth="1dp"
                app:checkedIconTint="@color/yellow"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_gain_weight"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fitness_goal_gain_weight"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/black_370"
                app:chipStrokeColor="@color/yellow"
                app:chipStrokeWidth="1dp"
                app:checkedIconTint="@color/yellow"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_muscle_gain"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fitness_goal_muscle_gain"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/black_370"
                app:chipStrokeColor="@color/yellow"
                app:chipStrokeWidth="1dp"
                app:checkedIconTint="@color/yellow"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_shape_body"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fitness_goal_shape_body"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/black_370"
                app:chipStrokeColor="@color/yellow"
                app:chipStrokeWidth="1dp"
                app:checkedIconTint="@color/yellow"/>

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <!-- Swipe Refresh Layout -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/hsv_filters"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- RecyclerView with Grid Layout -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_menu_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_menu_card"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
