<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_workout"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardBackgroundColor="@color/black_370"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Plan Name -->
        <TextView
            android:id="@+id/tv_plan_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Weight loss plan for beginners"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tv_plan_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/gray_450"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Train 4 days/week with moderate intensity"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/gray_450"
            android:alpha="0.3"/>

        <!-- Info Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1: Duration & Days -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Duration -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_workout_duration"
                        android:textColor="@color/gray_450"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/yellow"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="8 weeks"/>
                </LinearLayout>

                <!-- Days per week -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_workout_days_per_week"
                        android:textColor="@color/gray_450"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/tv_days_per_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/yellow"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="4 days"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2: Difficulty & Goal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <!-- Difficulty -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_workout_difficulty"
                        android:textColor="@color/gray_450"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/tv_difficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:text="Easy"/>
                </LinearLayout>

                <!-- Goal -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_workout_goal"
                        android:textColor="@color/gray_450"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/tv_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:text="Weight Loss"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- View Details Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/home_view_details"
            android:textColor="@color/black_370"
            android:textSize="13sp"
            app:backgroundTint="@color/yellow"
            app:cornerRadius="8dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
