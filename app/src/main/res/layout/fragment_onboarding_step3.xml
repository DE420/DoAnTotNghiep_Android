<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_step3_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Fitness Goal Label -->
        <TextView
            android:id="@+id/tv_goal_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/onboarding_goal_label"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Fitness Goal RadioGroup -->
        <RadioGroup
            android:id="@+id/rg_fitness_goal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_goal_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_lose_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_goal_lose_weight"
                android:textColor="@color/white"
                app:buttonTint="@color/radio_button_color"
                android:padding="12dp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_gain_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_goal_gain_weight"
                android:textColor="@color/white"
                app:buttonTint="@color/radio_button_color"
                android:padding="12dp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_muscle_gain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_goal_muscle_gain"
                android:textColor="@color/white"
                app:buttonTint="@color/radio_button_color"
                android:padding="12dp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_shape_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_goal_shape_body"
                android:textColor="@color/white"
                app:buttonTint="@color/radio_button_color"
                android:padding="12dp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_goal_others"
                android:textColor="@color/white"
                app:buttonTint="@color/radio_button_color"
                android:padding="12dp"/>
        </RadioGroup>

        <!-- Activity Level Label -->
        <TextView
            android:id="@+id/tv_activity_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/onboarding_activity_label"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/rg_fitness_goal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Activity Level RadioGroup -->
        <RadioGroup
            android:id="@+id/rg_activity_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_activity_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_sedentary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_activity_sedentary"
                android:textColor="@color/white"
                app:buttonTint="@color/radio_button_color"
                android:padding="12dp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_lightly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_activity_lightly"
                android:textColor="@color/white"
                app:buttonTint="@color/radio_button_color"
                android:padding="12dp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_moderately"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_activity_moderately"
                android:textColor="@color/white"
                app:buttonTint="@color/radio_button_color"
                android:padding="12dp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_very"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_activity_very"
                android:textColor="@color/white"
                app:buttonTint="@color/radio_button_color"
                android:padding="12dp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_extra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_activity_extra"
                android:textColor="@color/white"
                app:buttonTint="@color/radio_button_color"
                android:padding="12dp"/>
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
