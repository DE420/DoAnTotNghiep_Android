<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white85" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="Quay lại"
            android:textColor="@color/white85"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_detail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Exercise Name and Level -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <TextView
                    android:id="@+id/tv_exercise_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="Chống đẩy"
                    android:textColor="@color/white85"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_exercise_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Người mới bắt đầu"
                    android:background="@drawable/bg_level_default"
                    android:textColor="@android:color/black"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Training Type -->
            <TextView
                android:id="@+id/tv_training_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tập sức mạnh"
                android:textColor="#BDBDBD"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Video Instruction Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video hướng dẫn"
                android:textColor="@color/white85"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Video Player Placeholder -->
            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/video_player_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                app:use_controller="true"
                app:shutter_background_color="@android:color/transparent"
                app:resize_mode="fit"
                app:surface_type="surface_view" />

            <!-- Toggle Buttons for Guideline/Note -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggle_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_guideline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hướng dẫn"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:backgroundTint="@drawable/bg_toggle_button_selector"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_note"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ghi chú"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:backgroundTint="@drawable/bg_toggle_button_selector"
                    android:textAllCaps="false"
                    app:cornerRadius="12dp" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Guideline Content (initially visible) -->
            <LinearLayout
                android:id="@+id/layout_guideline_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thiết bị cần thiết"
                    android:textColor="@color/white85"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_necessary_equipment"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/ll_equipment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="16dp">
                    <!-- Equipment items will be added here programmatically -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="• Không cần thiết bị"
                        android:textColor="#BDBDBD"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Các bước thực hiện"
                    android:textColor="@color/white85"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_step"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/ll_steps_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="16dp">
                    <!-- Step items will be added here programmatically -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1. Bắt đầu ở tư thế chống đẩy"
                        android:textColor="#BDBDBD"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Note Content (initially hidden) -->
            <LinearLayout
                android:id="@+id/layout_note_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhóm cơ"
                    android:textColor="@color/white85"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_muscle_group"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/ll_muscle_group_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="16dp">
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mẹo hữu ích"
                    android:textColor="@color/white85"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_tips"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/ll_tips_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="16dp">
                    <!-- Tips items will be added here programmatically -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="• Giữ lưng thẳng"
                        android:textColor="#BDBDBD"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lỗi thường gặp"
                    android:textColor="@color/white85"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_common_mistakes"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/ll_mistakes_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="16dp">
                    <!-- Mistakes items will be added here programmatically -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="• Cong lưng"
                        android:textColor="#BDBDBD"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lợi ích sức khỏe"
                    android:textColor="@color/white85"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_health_benefits"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/ll_health_benefits_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="16dp">
                    <!-- Health benefits items will be added here programmatically -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="• Tăng cường cơ ngực"
                        android:textColor="#BDBDBD"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>