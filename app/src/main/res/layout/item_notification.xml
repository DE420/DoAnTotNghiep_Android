<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/black_370"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Unread Indicator -->
        <View
            android:id="@+id/v_unread_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_unread_indicator"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@id/cv_icon_container"
            app:layout_constraintTop_toTopOf="@id/cv_icon_container"
            tools:visibility="visible" />

        <!-- Notification Icon with Circle Background -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_icon_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_notification_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_notification"
                app:tint="@color/yellow"
                tools:src="@drawable/ic_heart_filled_24" />

        </androidx.cardview.widget.CardView>

        <!-- Notification Title -->
        <TextView
            android:id="@+id/tv_notification_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            tools:text="Bình luận mới trên bài viết"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/tv_notification_time"
            app:layout_constraintStart_toEndOf="@id/cv_icon_container"
            app:layout_constraintTop_toTopOf="@id/cv_icon_container"
            app:layout_constraintBottom_toTopOf="@id/tv_notification_content"
            app:layout_constraintVertical_chainStyle="packed" />

        <!-- Notification Time -->
        <TextView
            android:id="@+id/tv_notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2 giờ trước"
            android:textColor="@color/gray_450"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cv_icon_container" />

        <!-- Notification Content -->
        <TextView
            android:id="@+id/tv_notification_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            tools:text="John Doe đã bình luận: Bài tập này rất hay!"
            android:textColor="@color/gray_450"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_icon_container"
            app:layout_constraintTop_toBottomOf="@id/tv_notification_title"
            app:layout_constraintBottom_toBottomOf="@id/cv_icon_container" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
