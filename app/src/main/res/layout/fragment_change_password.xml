<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app_color"
    tools:context=".fragment.ChangePasswordFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white_4"
            >
            <ImageView
                android:id="@+id/img_chevron_left"
                android:layout_width="@dimen/icon_size_48"
                android:layout_height="@dimen/icon_size_48"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_back_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginStart="@dimen/margin_4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="22dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/img_chevron_left"
                app:layout_constraintTop_toTopOf="@id/img_chevron_left"
                app:layout_constraintBottom_toBottomOf="@id/img_chevron_left"
                android:layout_marginStart="@dimen/margin_4"/>
            <View
                android:id="@+id/view_stroke_bottom_header"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/img_chevron_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_4"
                android:background="@color/background_app_color"
                android:elevation="5dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cl_header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="64dp"
                >

                <TextView
                    android:id="@+id/tv_current_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_current_password_en"
                    android:textSize="16sp"
                    android:textColor="@color/white_200"
                    android:paddingStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="48dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>
                <EditText
                    android:id="@+id/et_current_password"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:background="@drawable/filled_black_text_field"
                    android:paddingStart="16dp"
                    android:paddingEnd="52dp"
                    android:textColor="@color/white_200"
                    android:textColorHint="@color/grey_200"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:hint="@string/txt_current_password_hint_en"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_password"
                    app:layout_constraintStart_toStartOf="@id/tv_current_password"
                    app:layout_constraintEnd_toEndOf="@id/tv_current_password"
                    android:layout_marginTop="4dp"
                    android:textCursorDrawable="@drawable/custom_cursor"/>

                <ImageView
                    android:id="@+id/img_show_current_password"
                    android:layout_width="@dimen/icon_size_24"
                    android:layout_height="@dimen/icon_size_24"
                    android:src="@drawable/ic_eye_on"
                    app:layout_constraintTop_toTopOf="@id/et_current_password"
                    app:layout_constraintBottom_toBottomOf="@id/et_current_password"
                    app:layout_constraintEnd_toEndOf="@id/et_current_password"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tv_current_password_support"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_cant_blank_current_password_support"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/pink_200"
                    app:layout_constraintTop_toBottomOf="@id/et_current_password"
                    app:layout_constraintStart_toStartOf="@id/et_current_password"
                    app:layout_constraintEnd_toEndOf="@id/et_current_password"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_new_password_en"
                    android:textSize="16sp"
                    android:textColor="@color/white_200"
                    android:paddingStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_current_password_support"
                    app:layout_constraintStart_toStartOf="@id/tv_current_password_support"
                    app:layout_constraintEnd_toEndOf="@id/tv_current_password_support"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>
                <EditText
                    android:id="@+id/et_new_password"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:background="@drawable/filled_black_text_field"
                    android:paddingStart="16dp"
                    android:paddingEnd="52dp"
                    android:textColor="@color/white_200"
                    android:textColorHint="@color/grey_200"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:hint="@string/txt_new_password_hint_en"
                    app:layout_constraintTop_toBottomOf="@id/tv_new_password"
                    app:layout_constraintStart_toStartOf="@id/tv_new_password"
                    app:layout_constraintEnd_toEndOf="@id/tv_new_password"
                    android:layout_marginTop="4dp"
                    android:textCursorDrawable="@drawable/custom_cursor"/>

                <ImageView
                    android:id="@+id/img_show_new_password"
                    android:layout_width="@dimen/icon_size_24"
                    android:layout_height="@dimen/icon_size_24"
                    android:src="@drawable/ic_eye_on"
                    app:layout_constraintTop_toTopOf="@id/et_new_password"
                    app:layout_constraintBottom_toBottomOf="@id/et_new_password"
                    app:layout_constraintEnd_toEndOf="@id/et_new_password"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tv_new_password_support"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_password_support"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/pink_200"
                    app:layout_constraintTop_toBottomOf="@id/et_new_password"
                    app:layout_constraintStart_toStartOf="@id/et_new_password"
                    app:layout_constraintEnd_toEndOf="@id/et_new_password"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_confirm_password_en"
                    android:textSize="16sp"
                    android:textColor="@color/white_200"
                    android:paddingStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_new_password_support"
                    app:layout_constraintStart_toStartOf="@id/tv_new_password_support"
                    app:layout_constraintEnd_toEndOf="@id/tv_new_password_support"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>
                <EditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:background="@drawable/filled_black_text_field"
                    android:paddingStart="16dp"
                    android:paddingEnd="52dp"
                    android:textColor="@color/white_200"
                    android:textColorHint="@color/grey_200"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:hint="@string/txt_confirm_new_password_hint_en"
                    app:layout_constraintTop_toBottomOf="@id/tv_confirm_password"
                    app:layout_constraintStart_toStartOf="@id/tv_confirm_password"
                    app:layout_constraintEnd_toEndOf="@id/tv_confirm_password"
                    android:layout_marginTop="4dp"
                    android:textCursorDrawable="@drawable/custom_cursor"/>

                <ImageView
                    android:id="@+id/img_show_confirm_password"
                    android:layout_width="@dimen/icon_size_24"
                    android:layout_height="@dimen/icon_size_24"
                    android:src="@drawable/ic_eye_on"
                    app:layout_constraintTop_toTopOf="@id/et_confirm_password"
                    app:layout_constraintBottom_toBottomOf="@id/et_confirm_password"
                    app:layout_constraintEnd_toEndOf="@id/et_confirm_password"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tv_confirm_password_support"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_new_password_support"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/pink_200"
                    app:layout_constraintTop_toBottomOf="@id/et_confirm_password"
                    app:layout_constraintStart_toStartOf="@id/et_confirm_password"
                    app:layout_constraintEnd_toEndOf="@id/et_confirm_password"
                    android:layout_marginTop="4dp"/>



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="Change password"
                    android:textColor="@color/black_450"
                    android:padding="16dp"
                    android:background="@drawable/yellow_rectangle_button"
                    app:layout_constraintTop_toBottomOf="@id/tv_confirm_password_support"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="32dp"
                    android:textSize="16dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/rl_loading_data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cl_header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#CC1E1E23"
            android:visibility="gone">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:indeterminateTint="@color/yellow_500"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>