<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/layout_plan_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_preset_plan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kế hoạch mẫu"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:backgroundTint="@drawable/bg_toggle_button_selector"
            android:textAllCaps="false"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_my_plan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kế hoạch của tôi"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:backgroundTint="@drawable/bg_toggle_button_selector"
            android:textAllCaps="false"
            app:cornerRadius="12dp" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_plan_toggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Search/Filter Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/search_card_view_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/black">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_search_box"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Search by Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Tên:"
                            android:textColor="@color/white85"
                            android:textSize="16sp" />
                        <EditText
                            android:id="@+id/et_search_plan_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:background="@drawable/bg_search_box"
                            android:hint="Nhập tên kế hoạch"
                            android:padding="8dp"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Search by Goal (Spinner) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Mục tiêu:"
                            android:textColor="@color/white85"
                            android:textSize="16sp" />
                        <Spinner
                            android:id="@+id/spinner_plan_goal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:background="@drawable/bg_search_box"
                            android:padding="4dp"
                            android:spinnerMode="dropdown"
                            tools:listitem="@layout/spinner_item_white_text" />
                    </LinearLayout>

                    <!-- Search by Level (Spinner) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Cấp độ:"
                            android:textColor="@color/white85"
                            android:textSize="16sp" />
                        <Spinner
                            android:id="@+id/spinner_plan_level"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:background="@drawable/bg_search_box"
                            android:padding="4dp"
                            android:spinnerMode="dropdown"
                            tools:listitem="@layout/spinner_item_white_text" />
                    </LinearLayout>

                    <!-- Search by Duration -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Thời lượng:"
                            android:textColor="@color/white85"
                            android:textSize="16sp" />
                        <EditText
                            android:id="@+id/et_search_plan_duration"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:background="@drawable/bg_search_box"
                            android:hint="Nhập số tuần"
                            android:padding="8dp"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_plan_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FFD700"
                        android:text="TÌM KIẾM"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="70dp"
                        app:cornerRadius="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- RecyclerView for Plans -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_plans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_plan" />

            <!-- Add More Button (visible only for My Plan) -->
            <Button
                android:id="@+id/btn_add_more_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#FFD700"
                android:text="THÊM KẾ HOẠCH"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progress_bar_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>