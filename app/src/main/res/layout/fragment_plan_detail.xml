<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_plan_detail"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button_plan_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white85" />

        <TextView
            android:id="@+id/toolbar_title_plan_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            tools:text="Quay lại"
            android:textColor="@color/white85"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <ProgressBar
        android:id="@+id/progress_bar_plan_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view_plan_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_plan_detail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Plan Name -->
            <TextView
                android:id="@+id/tv_plan_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Kế hoạch tập luyện cho người mới bắt đầu"
                android:textColor="@color/white85"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Start Date (Only for My Plan) -->
            <LinearLayout
                android:id="@+id/layout_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:visibility="gone"> <!-- Default to gone, show if My Plan -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày bắt đầu: "
                    android:textColor="@color/white85"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_plan_detail_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="01/01/2000"
                    android:textColor="#BDBDBD"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Level -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cấp độ: "
                    android:textColor="@color/white85"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_plan_detail_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Người mới bắt đầu"
                    android:textColor="#BDBDBD"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Goal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mục tiêu: "
                    android:textColor="@color/white85"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_plan_detail_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Giảm cân"
                    android:textColor="#BDBDBD"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời lượng: "
                    android:textColor="@color/white85"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_plan_detail_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="4 tuần"
                    android:textColor="#BDBDBD"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Days -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Các ngày: "
                    android:textColor="@color/white85"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_plan_detail_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Thứ Bảy, Chủ Nhật"
                    android:textColor="#BDBDBD"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Exercises Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bài tập:"
                android:textColor="@color/white85"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Week Spinner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuần:"
                    android:textColor="@color/white85"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />
                <Spinner
                    android:id="@+id/spinner_plan_detail_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_search_box"
                    android:padding="4dp"
                    android:spinnerMode="dropdown"
                    tools:listitem="@layout/spinner_item_white_text" />
            </LinearLayout>

            <!-- RecyclerView for Plan Days and Exercises -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_plan_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_plan_day" />

            <!-- Action Buttons -->
            <LinearLayout
                android:id="@+id/layout_action_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <!-- Copy and Edit Button (Only for Preset Plan) -->
                <Button
                    android:id="@+id/btn_copy_and_edit_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFD700"
                    android:text="SAO CHÉP VÀ CHỈNH SỬA"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="70dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"
                    app:cornerRadius="4dp" />

                <!-- Edit Button (Only for Your Plan) -->
                <Button
                    android:id="@+id/btn_edit_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFD700"
                    android:text="CHỈNH SỬA"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="70dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"
                    app:cornerRadius="4dp" />

                <!-- Delete Button (Only for Your Plan) -->
                <Button
                    android:id="@+id/btn_delete_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#D32F2F"
                    android:text="XÓA"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="70dp"
                    android:visibility="gone"
                    app:cornerRadius="4dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>