<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app_color"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Back Button and Title Header -->
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back_24"
            android:contentDescription="@string/back"
            app:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/create_menu"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/ib_back"
            app:layout_constraintBottom_toBottomOf="@id/ib_back"
            app:layout_constraintStart_toEndOf="@id/ib_back"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Menu Image -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_menu_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/black_370"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_menu_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_empty_nutrition_96"
                android:contentDescription="@string/menu_image"/>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_choose_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/choose_image"
            android:textColor="@color/black"
            app:backgroundTint="@color/yellow"
            app:icon="@drawable/ic_image_24"
            app:iconTint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/cv_menu_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Menu Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_menu_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/menu_name"
            app:layout_constraintTop_toBottomOf="@id/btn_choose_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundColor="@color/black_370"
            app:hintTextColor="@color/white_200"
            app:boxStrokeColor="@color/yellow">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_menu_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:textColorHint="@color/white_200"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/description"
            app:layout_constraintTop_toBottomOf="@id/til_menu_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundColor="@color/black_370"
            app:hintTextColor="@color/white_200"
            app:boxStrokeColor="@color/yellow">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="5"
                android:minHeight="100dp"
                android:textColorHint="@color/white_200"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fitness Goal -->
        <TextView
            android:id="@+id/tv_fitness_goal_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/fitness_goal"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/til_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Spinner
            android:id="@+id/sp_fitness_goal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:listitem="@layout/selected_item_spinner"
            android:background="@color/black_370"
            android:popupBackground="@color/black_370"
            app:layout_constraintTop_toBottomOf="@id/tv_fitness_goal_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Privacy Toggle -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/sw_private"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/make_menu_private"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:thumbTint="@color/yellow"
            app:trackTint="@color/gray_450"
            app:layout_constraintTop_toBottomOf="@id/sp_fitness_goal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Meals Section -->
        <TextView
            android:id="@+id/tv_meals_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/meals"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/sw_private"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Breakfast Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_breakfast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/black_370"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_meals_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Meal Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Meal Icon -->
                    <ImageView
                        android:id="@+id/iv_breakfast_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_breakfast_24"
                        app:tint="@color/yellow"/>

                    <!-- Meal Name, Calories and Nutrition -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/breakfast"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_breakfast_calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/yellow"
                            android:textSize="14sp"
                            android:text="0 kcal"/>

                        <TextView
                            android:id="@+id/tv_breakfast_nutrition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/gray_450"
                            android:textSize="12sp"
                            android:text="P: 0g | C: 0g | F: 0g"/>

                    </LinearLayout>

                    <!-- Add Dish Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_breakfast_dish"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:minWidth="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="@string/add_dish"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:backgroundTint="@color/yellow"
                        app:icon="@drawable/ic_white_add_24"
                        app:iconSize="16dp"
                        app:iconTint="@color/black"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_breakfast_dishes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_create_menu_dish"
                    tools:itemCount="2"/>

                <!-- Empty State for Breakfast -->
                <TextView
                    android:id="@+id/tv_breakfast_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/no_dishes_added"
                    android:textColor="@color/gray_450"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Lunch Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_lunch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/black_370"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/cv_breakfast"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Meal Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Meal Icon -->
                    <ImageView
                        android:id="@+id/iv_lunch_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_lunch_24"
                        app:tint="@color/yellow"/>

                    <!-- Meal Name, Calories and Nutrition -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lunch"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_lunch_calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/yellow"
                            android:textSize="14sp"
                            android:text="0 kcal"/>

                        <TextView
                            android:id="@+id/tv_lunch_nutrition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/gray_450"
                            android:textSize="12sp"
                            android:text="P: 0g | C: 0g | F: 0g"/>

                    </LinearLayout>

                    <!-- Add Dish Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_lunch_dish"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:minWidth="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="@string/add_dish"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:backgroundTint="@color/yellow"
                        app:icon="@drawable/ic_white_add_24"
                        app:iconSize="16dp"
                        app:iconTint="@color/black"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_lunch_dishes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_create_menu_dish"
                    tools:itemCount="2"/>

                <!-- Empty State for Lunch -->
                <TextView
                    android:id="@+id/tv_lunch_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/no_dishes_added"
                    android:textColor="@color/gray_450"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Dinner Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_dinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/black_370"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/cv_lunch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Meal Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Meal Icon -->
                    <ImageView
                        android:id="@+id/iv_dinner_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_dinner_24"
                        app:tint="@color/yellow"/>

                    <!-- Meal Name, Calories and Nutrition -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dinner"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_dinner_calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/yellow"
                            android:textSize="14sp"
                            android:text="0 kcal"/>

                        <TextView
                            android:id="@+id/tv_dinner_nutrition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/gray_450"
                            android:textSize="12sp"
                            android:text="P: 0g | C: 0g | F: 0g"/>

                    </LinearLayout>

                    <!-- Add Dish Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_dinner_dish"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:minWidth="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="@string/add_dish"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:backgroundTint="@color/yellow"
                        app:icon="@drawable/ic_white_add_24"
                        app:iconSize="16dp"
                        app:iconTint="@color/black"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_dinner_dishes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_create_menu_dish"
                    tools:itemCount="2"/>

                <!-- Empty State for Dinner -->
                <TextView
                    android:id="@+id/tv_dinner_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/no_dishes_added"
                    android:textColor="@color/gray_450"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Snacks Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_snacks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/black_370"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/cv_dinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Meal Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Meal Icon -->
                    <ImageView
                        android:id="@+id/iv_snacks_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_snack_24"
                        app:tint="@color/yellow"/>

                    <!-- Meal Name, Calories and Nutrition -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/snacks"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_snacks_calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/yellow"
                            android:textSize="14sp"
                            android:text="0 kcal"/>

                        <TextView
                            android:id="@+id/tv_snacks_nutrition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/gray_450"
                            android:textSize="12sp"
                            android:text="P: 0g | C: 0g | F: 0g"/>

                    </LinearLayout>

                    <!-- Add Dish Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_snacks_dish"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:minWidth="0dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="@string/add_dish"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:backgroundTint="@color/yellow"
                        app:icon="@drawable/ic_white_add_24"
                        app:iconSize="16dp"
                        app:iconTint="@color/black"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_snacks_dishes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_create_menu_dish"
                    tools:itemCount="2"/>

                <!-- Empty State for Snacks -->
                <TextView
                    android:id="@+id/tv_snacks_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/no_dishes_added"
                    android:textColor="@color/gray_450"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Total Nutrition Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_total_nutrition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/yellow"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/cv_snacks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_nutrition"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_total_calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kcal"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_total_protein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0g"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/protein"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_total_carbs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0g"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/carbs"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_total_fat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0g"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fat"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:indeterminateTint="@color/yellow"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cv_total_nutrition"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/ll_action_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/progress_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/cancel"
                android:textColor="@color/white"
                app:backgroundTint="@color/gray_450"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/save_menu"
                android:textColor="@color/black"
                app:backgroundTint="@color/yellow"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
