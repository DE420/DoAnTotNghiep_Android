<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/black_370"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Meal Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Meal Icon -->
            <ImageView
                android:id="@+id/iv_meal_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/img_user_default_128"
                app:tint="@color/yellow"/>

            <!-- Meal Name and Calories -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_meal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Breakfast"/>

                <TextView
                    android:id="@+id/tv_meal_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    tools:text="450 kcal"/>

                <TextView
                    android:id="@+id/tv_meal_nutrition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/gray_450"
                    android:textSize="12sp"
                    tools:text="P: 30g | C: 45g | F: 15g"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Dishes RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_meal_dishes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:nestedScrollingEnabled="false"
            tools:itemCount="2"
            tools:listitem="@layout/item_meal_dish"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
