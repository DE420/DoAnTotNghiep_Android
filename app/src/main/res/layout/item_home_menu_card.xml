<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_menu"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardBackgroundColor="@color/black_370"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Menu Name -->
        <TextView
            android:id="@+id/tv_menu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Weight loss menu 1800 kcal"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tv_menu_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/gray_450"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Balanced nutrition for weight loss goal"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/gray_450"
            android:alpha="0.3"/>

        <!-- Calories Target -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_menu_target"
                android:textColor="@color/gray_450"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_calories_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="1800 kcal"/>
        </LinearLayout>

        <!-- Macros Info -->
        <TextView
            android:id="@+id/tv_macros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="P: 120g | C: 180g | F: 50g"/>

        <!-- Creator Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_menu_created_by"
                android:textColor="@color/gray_450"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/tv_creator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                tools:text="Admin"/>
        </LinearLayout>

        <!-- View Menu Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/home_view_menu"
            android:textColor="@color/black_370"
            android:textSize="13sp"
            app:backgroundTint="@color/yellow"
            app:cornerRadius="8dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
