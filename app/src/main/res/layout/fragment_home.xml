<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.fitnessapp.viewmodel.HomeViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/home_coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_app_color">

        <!-- AppBarLayout with scroll behavior -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <!-- Header Section -->
            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="@color/black_370"
                app:layout_scrollFlags="scroll|enterAlways|snap">

                <!-- Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="@string/home_title"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <!-- Notification Button -->
                <ImageButton
                    android:id="@+id/ib_notification"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_notification"
                    android:background="@drawable/bg_transparent_circle_icon"
                    android:scaleType="centerCrop"
                    app:tint="@color/white"
                    android:contentDescription="@string/home_notification_desc"/>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Main Content with SwipeRefreshLayout -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <!-- Content Container -->
                <LinearLayout
                    android:id="@+id/ll_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Health Metrics Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_health_metrics_title"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <!-- Metrics Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_health_metrics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:cardBackgroundColor="@color/black_370"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <!-- BMI -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/home_bmi_label"
                                    android:textColor="@color/gray_450"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/tv_bmi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/yellow"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    tools:text="22.5"/>
                            </LinearLayout>

                            <!-- Divider -->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/gray_450"
                                android:alpha="0.3"/>

                            <!-- TDEE -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/home_tdee_label"
                                    android:textColor="@color/gray_450"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/tv_tdee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/yellow"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    tools:text="2200"/>
                            </LinearLayout>

                            <!-- Divider -->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/gray_450"
                                android:alpha="0.3"/>

                            <!-- Target Calories -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/home_target_calories_label"
                                    android:textColor="@color/gray_450"
                                    android:textSize="12sp"
                                    android:gravity="center"
                                    android:maxLines="2"/>

                                <TextView
                                    android:id="@+id/tv_target_calories"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/yellow"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    tools:text="1800"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Suggested Workouts Section -->
                    <LinearLayout
                        android:id="@+id/ll_workouts_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/home_suggested_workouts_title"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tv_see_all_workouts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_see_all_workouts"
                                android:textColor="@color/yellow"
                                android:textSize="13sp"
                                android:padding="4dp"/>
                        </LinearLayout>

                        <!-- Workouts RecyclerView -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_workouts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            tools:listitem="@layout/item_home_workout_card"
                            tools:itemCount="2"/>

                        <!-- Empty State -->
                        <TextView
                            android:id="@+id/tv_no_workouts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home_no_workouts"
                            android:textColor="@color/gray_450"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:padding="24dp"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <!-- Suggested Menus Section -->
                    <LinearLayout
                        android:id="@+id/ll_menus_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Section Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/home_suggested_menus_title"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tv_see_all_menus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/home_see_all_menus"
                                android:textColor="@color/yellow"
                                android:textSize="13sp"
                                android:padding="4dp"/>
                        </LinearLayout>

                        <!-- Menus RecyclerView -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_menus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            tools:listitem="@layout/item_home_menu_card"
                            tools:itemCount="2"/>

                        <!-- Empty State -->
                        <TextView
                            android:id="@+id/tv_no_menus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/home_no_menus"
                            android:textColor="@color/gray_450"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:padding="24dp"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- Loading Overlay -->
        <FrameLayout
            android:id="@+id/loading_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/yellow"/>
        </FrameLayout>

        <!-- Error State -->
        <LinearLayout
            android:id="@+id/ll_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_error"
                android:contentDescription="@string/home_error_load"
                app:tint="@color/gray_450"/>

            <TextView
                android:id="@+id/tv_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/home_error_load"
                android:textColor="@color/gray_450"
                android:textSize="14sp"
                android:gravity="center"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/home_retry"
                android:textColor="@color/black_370"
                app:backgroundTint="@color/yellow"
                app:cornerRadius="8dp"/>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
