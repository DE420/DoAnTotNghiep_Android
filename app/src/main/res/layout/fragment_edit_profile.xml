<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.EditProfileFragment"
    android:id="@+id/fragment_edit_profile">
        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/background_app_color"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white_4"
            >
            <ImageView
                android:id="@+id/img_chevron_left"
                android:layout_width="@dimen/icon_size_48"
                android:layout_height="@dimen/icon_size_48"
                android:padding="12dp"
                android:src="@drawable/ic_chevron_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginStart="@dimen/margin_4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="22dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/img_chevron_left"
                app:layout_constraintTop_toTopOf="@id/img_chevron_left"
                app:layout_constraintBottom_toBottomOf="@id/img_chevron_left"
                android:layout_marginStart="@dimen/margin_4"/>
            <View
                android:id="@+id/view_stroke_bottom_header"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/img_chevron_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_4"
                android:background="@color/background_app_color"
                android:elevation="5dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cl_header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="64dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/default_avatar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/view_edit_image_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/yellow_circle_button"
                    app:layout_constraintBottom_toBottomOf="@id/img_avatar"
                    app:layout_constraintEnd_toEndOf="@id/img_avatar"
                    android:clickable="true">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_camera_plus_24"
                        android:clickable="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/tv_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_full_name_en"
                    android:textSize="16sp"
                    android:textColor="@color/white_200"
                    android:paddingStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/img_avatar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>
                <EditText
                    android:id="@+id/et_full_name"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:background="@drawable/filled_black_text_field"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/white_200"
                    android:textColorHint="@color/grey_200"
                    android:textSize="16sp"
                    android:hint="@string/txt_full_name_hint_en"
                    app:layout_constraintTop_toBottomOf="@id/tv_full_name"
                    app:layout_constraintStart_toStartOf="@id/tv_full_name"
                    app:layout_constraintEnd_toEndOf="@id/tv_full_name"
                    android:layout_marginTop="4dp"
                    android:textCursorDrawable="@drawable/custom_cursor"/>

                <TextView
                    android:id="@+id/tv_full_name_support"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Full name can't blank"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/pink_200"
                    app:layout_constraintTop_toBottomOf="@id/et_full_name"
                    app:layout_constraintStart_toStartOf="@id/et_full_name"
                    app:layout_constraintEnd_toEndOf="@id/et_full_name"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_activity_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/txt_activity_level"
                    android:textSize="16sp"
                    android:textColor="@color/white_200"
                    android:paddingStart="16dp"
                    app:layout_constraintEnd_toEndOf="@id/tv_full_name"
                    app:layout_constraintStart_toStartOf="@id/tv_full_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_full_name_support" />
                <Spinner
                    android:id="@+id/spn_activity_level"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:background="@drawable/filled_black_text_field"
                    android:textColor="@color/white_200"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_activity_level"
                    app:layout_constraintStart_toStartOf="@id/tv_full_name"
                    app:layout_constraintEnd_toEndOf="@id/tv_full_name"
                    android:layout_marginTop="8dp"
                    tools:listitem="@layout/selected_item_spinner"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@drawable/spinner_popup_background"
                    />

                <TextView
                    android:id="@+id/tv_activity_level_support"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/pink_200"
                    app:layout_constraintTop_toBottomOf="@id/spn_activity_level"
                    app:layout_constraintStart_toStartOf="@id/spn_activity_level"
                    app:layout_constraintEnd_toEndOf="@id/spn_activity_level"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_goal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_goal"
                    android:textSize="16sp"
                    android:textColor="@color/white_200"
                    android:paddingStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_activity_level_support"
                    app:layout_constraintStart_toStartOf="@id/tv_full_name"
                    app:layout_constraintEnd_toEndOf="@id/tv_full_name"
                    android:layout_marginTop="16dp"
                    />
                <Spinner
                    android:id="@+id/spn_fitness_goal"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:background="@drawable/filled_black_text_field"
                    android:popupBackground="@drawable/spinner_popup_background"
                    android:textColor="@color/white_200"
                    android:textColorHint="@color/grey_200"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_goal"
                    app:layout_constraintStart_toStartOf="@id/tv_full_name"
                    app:layout_constraintEnd_toEndOf="@id/tv_full_name"
                    android:layout_marginTop="8dp"
                    tools:listitem="@layout/selected_item_spinner"
                    android:spinnerMode="dropdown"/>

                <TextView
                    android:id="@+id/tv_goal_support"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/pink_200"
                    app:layout_constraintTop_toBottomOf="@id/spn_fitness_goal"
                    app:layout_constraintStart_toStartOf="@id/spn_fitness_goal"
                    app:layout_constraintEnd_toEndOf="@id/spn_fitness_goal"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_date_of_birth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_date_of_birth_en"
                    android:textSize="16sp"
                    android:textColor="@color/white_200"
                    android:paddingStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_goal_support"
                    app:layout_constraintStart_toStartOf="@id/tv_full_name"
                    app:layout_constraintEnd_toEndOf="@id/tv_full_name"
                    />
                <EditText
                    android:id="@+id/et_date_of_birth"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:background="@drawable/filled_black_text_field"
                    android:paddingStart="16dp"
                    android:paddingEnd="52dp"
                    android:textColor="@color/white_200"
                    android:textColorHint="@color/grey_200"
                    android:textSize="16sp"
                    android:hint="@string/txt_birthday_hint_en"
                    app:layout_constraintTop_toBottomOf="@id/tv_date_of_birth"
                    app:layout_constraintStart_toStartOf="@id/tv_full_name"
                    app:layout_constraintEnd_toEndOf="@id/tv_full_name"
                    android:layout_marginTop="8dp"
                    android:inputType="date"
                    android:textCursorDrawable="@drawable/custom_cursor"/>

                <ImageView
                    android:id="@+id/img_calendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    app:layout_constraintTop_toTopOf="@id/et_date_of_birth"
                    app:layout_constraintBottom_toBottomOf="@id/et_date_of_birth"
                    app:layout_constraintEnd_toEndOf="@id/et_date_of_birth"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tv_date_of_birth_support"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Date format: dd/MM/yyyy"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/pink_200"
                    app:layout_constraintTop_toBottomOf="@id/et_date_of_birth"
                    app:layout_constraintStart_toStartOf="@id/et_date_of_birth"
                    app:layout_constraintEnd_toEndOf="@id/et_date_of_birth"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_weight_kg_en"
                    android:textSize="16sp"
                    android:textColor="@color/white_200"
                    android:paddingStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_date_of_birth_support"
                    app:layout_constraintStart_toStartOf="@id/tv_full_name"
                    app:layout_constraintEnd_toEndOf="@id/tv_full_name"
                    android:layout_marginTop="16dp"
                    />
                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:background="@drawable/filled_black_text_field"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/white_200"
                    android:textColorHint="@color/grey_200"
                    android:textSize="16sp"
                    android:hint="@string/txt_weight_hint_en"
                    app:layout_constraintTop_toBottomOf="@id/tv_weight"
                    app:layout_constraintStart_toStartOf="@id/tv_full_name"
                    app:layout_constraintEnd_toEndOf="@id/tv_full_name"
                    android:layout_marginTop="8dp"
                    android:inputType="numberDecimal"
                    android:textCursorDrawable="@drawable/custom_cursor"/>

                <TextView
                    android:id="@+id/tv_weight_support"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Weight can't blank and greater than 0"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/pink_200"
                    app:layout_constraintTop_toBottomOf="@id/et_weight"
                    app:layout_constraintStart_toStartOf="@id/et_weight"
                    app:layout_constraintEnd_toEndOf="@id/et_weight"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_height_m_en"
                    android:textSize="16sp"
                    android:textColor="@color/white_200"
                    android:paddingStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_weight_support"
                    app:layout_constraintStart_toStartOf="@id/tv_full_name"
                    app:layout_constraintEnd_toEndOf="@id/tv_full_name"
                    android:layout_marginTop="16dp"
                    />
                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:background="@drawable/filled_black_text_field"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/white_200"
                    android:textColorHint="@color/grey_200"
                    android:textSize="16sp"
                    android:hint="@string/txt_height_hint_en"
                    app:layout_constraintTop_toBottomOf="@id/tv_height"
                    app:layout_constraintStart_toStartOf="@id/tv_full_name"
                    app:layout_constraintEnd_toEndOf="@id/tv_full_name"
                    android:layout_marginTop="8dp"
                    android:inputType="numberDecimal"
                    android:textCursorDrawable="@drawable/custom_cursor"/>

                <TextView
                    android:id="@+id/tv_height_support"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Height can't blank and greater than 0"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/pink_200"
                    app:layout_constraintTop_toBottomOf="@id/et_height"
                    app:layout_constraintStart_toStartOf="@id/et_height"
                    app:layout_constraintEnd_toEndOf="@id/et_height"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tv_error"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:visibility="invisible"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/pink_200"
                    app:layout_constraintTop_toBottomOf="@id/tv_height_support"
                    app:layout_constraintStart_toStartOf="@id/et_height"
                    app:layout_constraintEnd_toEndOf="@id/et_height"
                    android:layout_marginTop="24dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_update"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="Update"
                    android:textColor="@color/black_450"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:background="@drawable/yellow_rectangle_button"
                    app:layout_constraintTop_toBottomOf="@id/tv_error"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/rl_loading_data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/cl_header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#CC1E1E23"
            android:visibility="gone">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:indeterminateTint="@color/yellow_500"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
