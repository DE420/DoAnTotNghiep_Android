<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/black_370"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- User Avatar -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/img_user_default_128"
            app:civ_border_color="@color/yellow"
            app:civ_border_width="1dp"/>

        <!-- Comment Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- User Name and Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="User Name"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="John Doe"/>

                <TextView
                    android:id="@+id/tv_comment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2h ago"
                    android:textColor="@color/gray_450"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    tools:text="2h ago"/>

            </LinearLayout>

            <!-- Comment Text -->
            <TextView
                android:id="@+id/tv_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comment content goes here..."
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="2dp"
                tools:text="This is a sample comment that shows how the comment will look in the app."/>

            <!-- Comment Image (if exists) -->
            <ImageView
                android:id="@+id/iv_comment_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:background="@color/black_450"
                android:visibility="gone"
                android:contentDescription="Comment image"
                tools:visibility="visible"
                tools:src="@drawable/img_user_default_128"/>

            <!-- Like and Action Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <!-- Like Button -->
                <ImageButton
                    android:id="@+id/ib_like_comment"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_like_outline_24"
                    app:tint="@color/white"
                    android:contentDescription="Like comment"/>

                <!-- Like Count -->
                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    tools:text="5"/>

                <!-- Spacer to push edit/delete buttons to right -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <!-- Edit Button (only for own comments) -->
                <ImageButton
                    android:id="@+id/ib_edit_comment"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_edit_white_24"
                    app:tint="@color/yellow"
                    android:visibility="gone"
                    android:contentDescription="@string/community_edit_comment"
                    android:layout_marginEnd="8dp"
                    tools:visibility="visible"/>

                <!-- Delete Button (only for own comments) -->
                <ImageButton
                    android:id="@+id/ib_delete_comment"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_delete_24"
                    app:tint="@color/red_400"
                    android:visibility="gone"
                    android:contentDescription="@string/community_delete"
                    tools:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
