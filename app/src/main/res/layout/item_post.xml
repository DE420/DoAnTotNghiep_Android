<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_370">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_post_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/item_post_guideline_horizontal_50_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_user_default_128"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_user_full_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Username"
            android:textColor="@color/white_200"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@id/item_post_guideline_horizontal_50_percent"
            app:layout_constraintEnd_toStartOf="@+id/cl_ic_edit"
            app:layout_constraintStart_toEndOf="@id/civ_avatar"
            app:layout_constraintTop_toTopOf="@id/civ_avatar" />

        <TextView
            android:id="@+id/tv_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1d"
            android:textColor="@color/gray_450"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/item_post_guideline_horizontal_50_percent"
            app:layout_constraintStart_toStartOf="@id/tv_user_full_name"
            android:layout_marginTop="4dp"
            />

        <ImageButton
            android:id="@+id/ib_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_edit_white_24"
            android:background="@drawable/bg_transparent_rectangle_icon_no_corner"
            android:layout_marginEnd="@dimen/margin_4"
            app:layout_constraintTop_toTopOf="@id/ib_delete"
            app:layout_constraintBottom_toBottomOf="@id/ib_delete"
            app:layout_constraintEnd_toStartOf="@id/ib_delete"/>

        <ImageButton
            android:id="@+id/ib_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_white_close_24"
            android:background="@drawable/bg_transparent_rectangle_icon_no_corner"
            android:layout_marginEnd="@dimen/margin_4"
            app:layout_constraintTop_toTopOf="@id/tv_user_full_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_user_full_name"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_super_long"
        android:textColor="@color/white_200"
        android:textSize="16sp"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/cl_post_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        />

    <ImageView
        android:id="@+id/img_post"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        />

    <VideoView
        android:id="@+id/video_post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        app:layout_constraintTop_toBottomOf="@id/img_post"
        app:layout_constraintStart_toStartOf="@id/img_post"
        app:layout_constraintEnd_toEndOf="@id/img_post"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/video_post"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp"
        android:background="@drawable/bg_transparent_circle_icon"
        >
        <ImageView
            android:id="@+id/img_like"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like_32"
            android:tint="@color/white_200"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/img_like"
            android:text="13.5K"
            android:textSize="16sp"
            android:textColor="@color/white_200"
            app:layout_constraintTop_toTopOf="@id/img_like"
            app:layout_constraintBottom_toBottomOf="@id/img_like"
            android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cl_like"
        app:layout_constraintStart_toEndOf="@id/cl_like"
        android:padding="16dp"
        android:background="@drawable/bg_transparent_circle_icon"
        >
        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chat_32"
            android:tint="@color/white_200"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/img_comment"
            android:text="13.5K"
            android:textSize="16sp"
            android:textColor="@color/white_200"
            app:layout_constraintTop_toTopOf="@id/img_comment"
            app:layout_constraintBottom_toBottomOf="@id/img_comment"
            android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>