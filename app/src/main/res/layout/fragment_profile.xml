<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.fitnessapp.viewmodel.ProfileViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/profile_coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_app_color">

        <!-- Main Content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Header Section (similar to notification) -->
            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="@color/black_370"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/ib_back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_arrow_back_24"
                    android:background="@drawable/bg_transparent_circle_icon"
                    android:scaleType="centerCrop"
                    app:tint="@color/white"
                    android:contentDescription="@string/profile_back_desc"
                    android:layout_marginEnd="4dp"/>

                <!-- Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/profile_title"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <!-- Edit Button -->
                <ImageButton
                    android:id="@+id/ib_edit"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_edit_white_24"
                    android:background="@drawable/bg_transparent_circle_icon"
                    android:scaleType="centerCrop"
                    app:tint="@color/white"
                    android:contentDescription="@string/profile_edit_desc"
                    android:layout_marginEnd="4dp"/>

                <!-- Change Password Button -->
                <ImageButton
                    android:id="@+id/ib_change_password"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_change_password"
                    android:background="@drawable/bg_transparent_circle_icon"
                    android:scaleType="centerCrop"
                    app:tint="@color/white"
                    android:contentDescription="@string/profile_change_password_title"
                    android:layout_marginEnd="4dp"/>

                <!-- Logout Button -->
                <ImageButton
                    android:id="@+id/ib_logout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_red_logout_24"
                    android:background="@drawable/bg_transparent_circle_icon"
                    android:scaleType="centerCrop"
                    app:tint="@color/white"
                    android:contentDescription="@string/profile_logout"/>

            </LinearLayout>

            <!-- SwipeRefreshLayout for pull-to-refresh -->
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/srl_profile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/ll_header"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- ScrollView for content -->
                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nsv_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="32dp">

                        <!-- Profile Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_profile_header"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="16dp"
                            app:cardBackgroundColor="@color/black_370"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="24dp">

                                <!-- Avatar -->
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_avatar"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/img_user_default_128"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:contentDescription="@string/profile_avatar_desc"/>

                                <!-- Full Name -->
                                <TextView
                                    android:id="@+id/tv_full_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Nguyễn Văn A"
                                    android:textColor="@color/white"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="12dp"
                                    app:layout_constraintTop_toBottomOf="@id/iv_avatar"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                                <!-- Email -->
                                <TextView
                                    android:id="@+id/tv_email"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="email@example.com"
                                    android:textColor="@color/gray_450"
                                    android:textSize="15sp"
                                    android:layout_marginTop="4dp"
                                    app:layout_constraintTop_toBottomOf="@id/tv_full_name"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                                <!-- Birthday -->
                                <TextView
                                    android:id="@+id/tv_birthday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="01/01/1990"
                                    android:textColor="@color/gray_450"
                                    android:textSize="14sp"
                                    android:layout_marginTop="6dp"
                                    app:layout_constraintTop_toBottomOf="@id/tv_email"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Weight & Height Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_body_metrics"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="12dp"
                            app:cardBackgroundColor="@color/black_370"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:layout_constraintTop_toBottomOf="@id/cv_profile_header"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp">

                                <!-- Weight Section -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/profile_weight"
                                        android:textColor="@color/gray_450"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>

                                    <TextView
                                        android:id="@+id/tv_weight_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="65.5"
                                        android:textColor="@color/white"
                                        android:textSize="24sp"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/profile_unit_kg"
                                        android:textColor="@color/yellow"
                                        android:textSize="12sp"
                                        android:layout_marginTop="2dp"/>

                                </LinearLayout>

                                <!-- Divider -->
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/white_38"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"/>

                                <!-- Height Section -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">



                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/profile_height"
                                        android:textColor="@color/gray_450"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>

                                    <TextView
                                        android:id="@+id/tv_height_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="1.75"
                                        android:textColor="@color/white"
                                        android:textSize="24sp"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/profile_unit_m"
                                        android:textColor="@color/yellow"
                                        android:textSize="12sp"
                                        android:layout_marginTop="2dp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Goal Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_goal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="12dp"
                            app:cardBackgroundColor="@color/black_370"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:layout_constraintTop_toBottomOf="@id/cv_body_metrics"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <!-- Goal Header -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/profile_goal"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>

                                <!-- Goal Value -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="12dp">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/img_goal_32"
                                        android:contentDescription="@string/profile_goal"/>

                                    <TextView
                                        android:id="@+id/tv_goal_value"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        tools:text="Giảm cân"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        android:layout_marginStart="16dp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Activity Level Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_activity_level"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="12dp"
                            app:cardBackgroundColor="@color/black_370"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:layout_constraintTop_toBottomOf="@id/cv_goal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <!-- Activity Level Header -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/profile_activity_level"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>

                                <!-- Activity Level Value -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="12dp">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/img_levelup_32"
                                        android:contentDescription="@string/profile_activity_level"/>

                                    <TextView
                                        android:id="@+id/tv_activity_level_value"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        tools:text="Hoạt động vừa phải"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        android:layout_marginStart="16dp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Statistics Section -->
                        <TextView
                            android:id="@+id/tv_stats_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_my_stats"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="24dp"
                            app:layout_constraintTop_toBottomOf="@id/cv_activity_level"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <!-- Overall Stats Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_overall_stats"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="12dp"
                            app:cardBackgroundColor="@color/black_370"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_stats_header"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp">

                                <!-- Total Workouts -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="8dp">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="56dp"
                                        android:layout_height="56dp"
                                        app:cardBackgroundColor="@color/yellow_dark"
                                        app:cardCornerRadius="28dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:src="@drawable/img_bargraph_32"
                                            android:contentDescription="@string/profile_total_workouts"/>

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:id="@+id/tv_total_workouts"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="24"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="8dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/txt_workouts"
                                        android:textColor="@color/gray_450"
                                        android:textSize="12sp"
                                        android:gravity="center"
                                        android:layout_marginTop="4dp"/>

                                </LinearLayout>

                                <!-- Total Calories -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="8dp">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="56dp"
                                        android:layout_height="56dp"
                                        app:cardBackgroundColor="#3D1E00"
                                        app:cardCornerRadius="28dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:src="@drawable/img_calories_32"
                                            android:contentDescription="@string/profile_total_calories"/>

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:id="@+id/tv_total_calories"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="1250"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="8dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/txt_calories"
                                        android:textColor="@color/gray_450"
                                        android:textSize="12sp"
                                        android:gravity="center"
                                        android:layout_marginTop="4dp"/>

                                </LinearLayout>

                                <!-- Total Hours -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="8dp">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="56dp"
                                        android:layout_height="56dp"
                                        app:cardBackgroundColor="#1E3D00"
                                        app:cardCornerRadius="28dp"
                                        app:cardElevation="0dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:src="@drawable/img_clock_32"
                                            android:contentDescription="@string/profile_total_hours"/>

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:id="@+id/tv_total_hours"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:text="12.5"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:layout_marginTop="8dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/txt_hours"
                                        android:textColor="@color/gray_450"
                                        android:textSize="12sp"
                                        android:gravity="center"
                                        android:layout_marginTop="4dp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Monthly Stats Section -->
                        <LinearLayout
                            android:id="@+id/ll_monthly_stats_header"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="24dp"
                            app:layout_constraintTop_toBottomOf="@id/cv_overall_stats"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/profile_monthly_stats"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tv_current_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Tháng 1"
                                android:textColor="@color/gray_450"
                                android:textSize="14sp"/>

                        </LinearLayout>

                        <!-- Monthly Stats Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_monthly_stats"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="12dp"
                            app:cardBackgroundColor="@color/black_370"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:layout_constraintTop_toBottomOf="@id/ll_monthly_stats_header"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <!-- Monthly Stat Items -->
                                <TextView
                                    android:id="@+id/tv_monthly_workouts"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="Tổng số buổi tập: 15"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/white_10"/>

                                <TextView
                                    android:id="@+id/tv_monthly_duration"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="Tổng thời gian: 450.00 phút"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/white_10"/>

                                <TextView
                                    android:id="@+id/tv_monthly_active_days"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="Số ngày tập: 12"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/white_10"/>

                                <TextView
                                    android:id="@+id/tv_monthly_avg"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="Trung bình mỗi buổi: 30.00 phút"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/white_10"/>

                                <TextView
                                    android:id="@+id/tv_monthly_streak"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="Chuỗi ngày tập: 5 ngày"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/white_10"/>

                                <TextView
                                    android:id="@+id/tv_monthly_calories"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="Tổng calories: 750.00"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <!-- Loading Progress -->
            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:indeterminateTint="@color/yellow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="visible" />

            <!-- Error State -->
            <LinearLayout
                android:id="@+id/ll_error_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:padding="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/img_error"
                    android:alpha="0.6"
                    android:contentDescription="@string/profile_error_load"/>

                <TextView
                    android:id="@+id/tv_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/profile_error_load"
                    android:textSize="16sp"
                    android:textColor="@color/red_400"
                    android:gravity="center"
                    android:layout_marginTop="16dp"/>

                <Button
                    android:id="@+id/btn_retry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_retry"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
