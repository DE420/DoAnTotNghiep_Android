<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E23"
    tools:context=".fragment.ProfileFragment">

    <ImageView
        android:id="@+id/img_chevron_left"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_chevron_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/img_chevron_left"
        app:layout_constraintTop_toTopOf="@id/img_chevron_left"
        app:layout_constraintBottom_toBottomOf="@id/img_chevron_left"/>

    <ImageView
        android:id="@+id/button_edit_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_edit_white_24"
        app:layout_constraintEnd_toStartOf="@id/button_change_password"
        app:layout_constraintTop_toTopOf="@id/button_change_password"
        android:layout_marginEnd="12dp"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/button_change_password"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_change_password"
        app:layout_constraintEnd_toStartOf="@id/button_logout"
        app:layout_constraintTop_toTopOf="@id/button_logout"
        android:layout_marginEnd="12dp"/>

    <ImageView
        android:id="@+id/button_logout"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_chevron_left"
        android:layout_marginEnd="16dp"/>

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_chevron_left"
        android:layout_marginTop="16dp"
        android:background="@color/background_app_color"
        android:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_50_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/default_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="25sp"

            />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="janedoe@email.com"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_full_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthday: January 1st"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"
            />

<!--        <View-->
<!--            android:id="@+id/view_border"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            android:background="@drawable/border_no_background"-->
<!--            app:layout_constraintTop_toTopOf="@id/tv_user_weight"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/tv_weight"-->
<!--            app:layout_constraintStart_toStartOf="@id/tv_user_weight"-->
<!--            app:layout_constraintEnd_toEndOf="@id/tv_user_height"-->
<!--            android:layout_marginStart="-32dp"-->
<!--            android:layout_marginTop="-8dp"-->
<!--            android:layout_marginBottom="-6dp"-->
<!--            android:layout_marginEnd="-32dp"/>-->
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/gray"
            app:layout_constraintTop_toTopOf="@id/tv_user_weight"
            app:layout_constraintBottom_toBottomOf="@id/tv_weight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:id="@+id/tv_user_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 Kg"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_birthday"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical_50_percent"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="48dp"
            />
        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tv_user_weight"
            app:layout_constraintStart_toStartOf="@id/tv_user_weight"
            app:layout_constraintEnd_toEndOf="@id/tv_user_weight"
        />

        <TextView
            android:id="@+id/tv_user_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.65 m"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_user_weight"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_50_percent"
            android:layout_marginStart="48dp"
            />
        <TextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tv_user_height"
            app:layout_constraintStart_toStartOf="@id/tv_user_height"
            app:layout_constraintEnd_toEndOf="@id/tv_user_height"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/gray"
            app:layout_constraintTop_toTopOf="@id/img_fitness_goal"
            app:layout_constraintBottom_toBottomOf="@id/tv_fitness_goal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>

        <ImageView
            android:id="@+id/img_fitness_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_goal_32"
            app:layout_constraintStart_toStartOf="@id/tv_weight"
            app:layout_constraintTop_toBottomOf="@id/tv_weight"
            app:layout_constraintEnd_toEndOf="@id/tv_weight"
            android:layout_marginTop="32dp"/>

        <TextView
            android:id="@+id/tv_fitness_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loss weight"
            android:textColor="@color/white"
            android:maxWidth="150dp"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/img_fitness_goal"
            app:layout_constraintStart_toStartOf="@id/img_fitness_goal"
            app:layout_constraintEnd_toEndOf="@id/img_fitness_goal"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:id="@+id/img_activity_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_levelup_32"
            app:layout_constraintStart_toStartOf="@id/tv_user_height"
            app:layout_constraintTop_toTopOf="@id/img_fitness_goal"
            app:layout_constraintEnd_toEndOf="@id/tv_user_height"
            />

        <TextView
            android:id="@+id/tv_activity_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="extra active"
            android:maxWidth="150dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/tv_fitness_goal"
            app:layout_constraintStart_toStartOf="@id/img_activity_level"
            app:layout_constraintEnd_toEndOf="@id/img_activity_level"/>



        <TextView
            android:id="@+id/tv_my_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_my_statistics"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/tv_fitness_goal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            />

        <ImageView
            android:id="@+id/img_total_workouts"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_bargraph_32"
            app:layout_constraintTop_toBottomOf="@id/tv_my_statistics"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical_50_percent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/tv_total_workouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="149"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/img_total_workouts"
            app:layout_constraintStart_toStartOf="@id/img_total_workouts"
            app:layout_constraintEnd_toEndOf="@id/img_total_workouts"
            android:layout_marginTop="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workouts\ntotal"
            android:gravity="center_horizontal"
            android:textColor="#6D7776"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/tv_total_workouts"
            app:layout_constraintStart_toStartOf="@id/tv_total_workouts"
            app:layout_constraintEnd_toEndOf="@id/tv_total_workouts"/>


        <ImageView
            android:id="@+id/img_total_calories"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_calories_32"
            app:layout_constraintTop_toBottomOf="@id/tv_my_statistics"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_50_percent"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical_50_percent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/tv_total_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="149"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_total_workouts"
            app:layout_constraintStart_toStartOf="@id/img_total_calories"
            app:layout_constraintEnd_toEndOf="@id/img_total_calories"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories\ntotal"
            android:gravity="center_horizontal"
            android:textColor="#6D7776"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/tv_total_workouts"
            app:layout_constraintStart_toStartOf="@id/tv_total_calories"
            app:layout_constraintEnd_toEndOf="@id/tv_total_calories"/>


        <ImageView
            android:id="@+id/img_total_hours"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_clock_32"
            app:layout_constraintTop_toBottomOf="@id/tv_my_statistics"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_50_percent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/tv_total_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="149"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_total_workouts"
            app:layout_constraintStart_toStartOf="@id/img_total_hours"
            app:layout_constraintEnd_toEndOf="@id/img_total_hours"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hours\ntotal"
            android:gravity="center_horizontal"
            android:textColor="#6D7776"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/tv_total_hours"
            app:layout_constraintStart_toStartOf="@id/tv_total_hours"
            app:layout_constraintEnd_toEndOf="@id/tv_total_hours"/>


        <TextView
            android:id="@+id/tv_monthly_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Montly stats"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/tv_total_workouts"
            app:layout_constraintStart_toStartOf="@id/tv_my_statistics"
            android:layout_marginTop="72dp"/>

        <TextView
            android:id="@+id/tv_current_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="October 2025"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_monthly_stats"
            app:layout_constraintStart_toStartOf="@id/tv_monthly_stats"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tv_user_total_workouts_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total workouts"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_current_month"
            app:layout_constraintStart_toStartOf="@id/tv_current_month"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tv_total_workouts_month_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/tv_user_total_workouts_month"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_50_percent"
            />

        <TextView
            android:id="@+id/tv_user_total_duration_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Duration"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_user_total_workouts_month"
            app:layout_constraintStart_toStartOf="@id/tv_user_total_workouts_month"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_total_duration_month_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 min"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/tv_user_total_duration_month"
            app:layout_constraintStart_toStartOf="@id/tv_total_workouts_month_stats"
            />


        <TextView
            android:id="@+id/tv_user_active_days_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active days"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_user_total_duration_month"
            app:layout_constraintStart_toStartOf="@id/tv_current_month"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_active_days_month_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/tv_user_active_days_month"
            app:layout_constraintStart_toStartOf="@id/tv_total_workouts_month_stats"
            />

        <TextView
            android:id="@+id/tv_user_avg_per_workout_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avg per Workout"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_user_active_days_month"
            app:layout_constraintStart_toStartOf="@id/tv_user_active_days_month"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_avg_per_workout_month_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 min"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/tv_user_avg_per_workout_month"
            app:layout_constraintStart_toStartOf="@id/tv_total_duration_month_stats"
            />

        <TextView
            android:id="@+id/tv_user_current_streak_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current streak"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_user_avg_per_workout_month"
            app:layout_constraintStart_toStartOf="@id/tv_current_month"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_current_streak_month_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 days"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/tv_user_current_streak_month"
            app:layout_constraintStart_toStartOf="@id/tv_total_workouts_month_stats"
            />

        <TextView
            android:id="@+id/tv_user_total_calories_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Calories"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_user_current_streak_month"
            app:layout_constraintStart_toStartOf="@id/tv_user_current_streak_month"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_total_calories_month_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/tv_user_total_calories_month"
            app:layout_constraintStart_toStartOf="@id/tv_total_duration_month_stats"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
    <RelativeLayout
        android:id="@+id/rl_loading_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/img_chevron_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#1E1E23"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:indeterminateTint="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_error"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/img_chevron_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#1E1E23"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_error"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/img_error"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="64dp"/>

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/red_500"
            android:layout_below="@id/img_error"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reload_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_rectangle_button"
            android:text="Retry"
            android:layout_below="@id/tv_error"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>