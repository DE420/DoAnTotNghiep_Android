<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#333333" /> <!-- Màu nền của Spinner, ví dụ: xám đậm -->
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#555555" /> <!-- Viền (tùy chọn) -->
        </shape>
    </item>
    <item android:gravity="end|center_vertical" android:right="8dp">
        <bitmap android:src="@drawable/baseline_keyboard_arrow_down_24" />
    </item>
</layer-list>