<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black_370"/>
        </shape>
    </item>

    <!-- Loading Icon -->
    <item
        android:width="48dp"
        android:height="48dp"
        android:gravity="center">
        <rotate
            android:drawable="@drawable/ic_nutrition"
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="360" />
    </item>
</layer-list>
